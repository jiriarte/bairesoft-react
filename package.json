{
  "name": "bairesoft-react",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Bairesoft - Desarrollo de Software a Medida",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run optimize-images && vite build && npm run copy-redirects",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "vite preview --host --port $PORT",
    "clean": "rm -rf dist",
    "copy-redirects": "node -e \"require('fs').copyFileSync('public/_redirects', 'dist/_redirects')\"",
    "optimize-images": "node scripts/optimize-images.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "postinstall": "[ \"$NODE_ENV\" != \"production\" ] && husky install || true",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.11.0",
    "@fortawesome/fontawesome-free": "^6.7.1",
    "@sentry/react": "^7.91.0",
    "@types/react": "^18.2.15",
    "@types/react-datepicker": "^6.2.0",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "date-fns": "^4.1.0",
    "framer-motion": "^10.16.4",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "lucide-react": "^0.468.0",
    "react": "^18.2.0",
    "react-datepicker": "^7.5.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-icons": "^4.11.0",
    "react-intersection-observer": "^9.13.1",
    "react-router-dom": "^6.28.1",
    "react-window": "^1.8.9",
    "sharp": "^0.32.6",
    "styled-components": "^6.1.1",
    "swiper": "^11.1.15",
    "terser": "^5.24.0",
    "vite": "^5.0.10",
    "vite-bundle-analyzer": "^0.8.1",
    "vite-plugin-pwa": "^0.21.1",
    "workbox-window": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "vitest": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
